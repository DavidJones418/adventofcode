{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "deno",
      "command": "test",
      "args": ["--allow-all", "--coverage=.coverage"],
      "problemMatcher": [
        "$deno-test"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "label": "deno: test"
    },
    {
      "type": "deno",
      "command": "coverage",
      "args": [".coverage"],
      "problemMatcher": [
        "$deno-test"
      ],
      "group": "none",
      "label": "deno: coverage"
    }
  ]
}
